---
export interface Props {
  text: string;
  align?: 'left' | 'center' | 'right';
}

const { text, align = 'center' } = Astro.props;

const alignmentClasses = {
  left: 'md:text-left',
  center: 'md:text-center',
  right: 'md:text-right'
};
---

<h2 class={`text-pink-500 text-sm font-bold uppercase tracking-widest mb-2 text-center ${alignmentClasses[align]}`}>
  {text}
</h2>