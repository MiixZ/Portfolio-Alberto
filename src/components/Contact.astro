---
const email: string = "albertoplazamontesdm@gmail.com";
const emailHref = `mailto:${email}`;

const githubUrl: string = "https://github.com/RedRiotTank";
const linkedInUrl: string = "https://www.linkedin.com/in/alberto-plaza-montes/";
const leetCodeUrl: string = "https://leetcode.com/u/redriottank/";
---

<section id="contact" class="flex flex-col items-center">
  <h2 class="text-white text-3xl font-bold mb-6 text-center">Contact me!</h2>
  
  <!-- Email container centrado -->
  <div class="flex flex-col items-center w-full max-w-md">
    <div class="flex items-center gap-4 bg-[#161b22] border border-gray-700 px-6 py-4 rounded-xl w-full">
      <span id="email" class="text-white font-mono select-all flex-grow text-center">{email}</span>
      
      <!-- Bot贸n Copiar (manteniendo tu c贸digo original) -->
      <button 
        class="flex items-center gap-2 bg-purple-600 hover:bg-purple-700 text-white px-3 py-1.5 rounded-lg text-sm transition"
        onclick={`navigator.clipboard.writeText('${email}')`}
      >
        <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
          <rect x="9" y="9" width="13" height="13" rx="2" ry="2" />
          <rect x="2" y="2" width="13" height="13" rx="2" ry="2" />
        </svg>
      </button>
      
      <!-- Bot贸n Mailto (manteniendo tu c贸digo original) -->
      <a 
        href={emailHref}
        class="flex items-center gap-2 bg-pink-600 hover:bg-pink-700 text-white px-3 py-1.5 rounded-lg text-sm transition"
      >
        <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
          <path d="M10 14L21 3M21 3L14 21L10 14L3 10L21 3Z" />
        </svg>
      </a>
    </div>

    <!-- Social Links (manteniendo tus botones originales pero centrados) -->
    <div class="mt-6 flex flex-wrap gap-4 justify-center w-full">
      <!-- GitHub -->
      <a href={githubUrl} target="_blank" rel="noopener noreferrer"
        class="flex items-center gap-2 bg-gray-800 hover:bg-gray-700 text-white px-4 py-2 rounded-lg text-sm transition">
        <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
          <path d="M12 .5C5.648.5.5 5.648.5 12c0 5.084 3.292 9.387 7.86 10.91.575.105.785-.25.785-.557 0-.274-.01-1-.016-1.962-3.2.695-3.875-1.542-3.875-1.542-.524-1.33-1.28-1.685-1.28-1.685-1.046-.715.08-.7.08-.7 1.157.08 1.766 1.188 1.766 1.188 1.03 1.765 2.704 1.255 3.364.96.104-.746.403-1.255.732-1.544-2.553-.29-5.236-1.277-5.236-5.686 0-1.256.448-2.284 1.184-3.09-.118-.29-.513-1.454.112-3.03 0 0 .966-.31 3.164 1.18.918-.255 1.902-.382 2.88-.387.978.005 1.962.132 2.88.387 2.198-1.49 3.163-1.18 3.163-1.18.626 1.576.23 2.74.113 3.03.737.806 1.183 1.834 1.183 3.09 0 4.42-2.687 5.393-5.25 5.678.415.35.785 1.046.785 2.11 0 1.524-.014 2.75-.014 3.125 0 .308.208.667.79.553C20.208 21.383 23.5 17.08 23.5 12c0-6.352-5.148-11.5-11.5-11.5Z"/>
        </svg>
        GitHub
      </a>

      <!-- LinkedIn -->
      <a href={linkedInUrl} target="_blank" rel="noopener noreferrer"
        class="flex items-center gap-2 bg-blue-700 hover:bg-blue-800 text-white px-4 py-2 rounded-lg text-sm transition">
        <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
          <path d="M4.98 3.5C3.33 3.5 2 4.82 2 6.47c0 1.64 1.33 2.96 2.98 2.96H5c1.64 0 2.97-1.32 2.97-2.96C7.97 4.82 6.64 3.5 5 3.5h-.02zM2 21h6V9H2v12zm7.5-12h5.25v1.71h.08c.73-1.39 2.52-2.83 5.17-2.83 5.53 0 6.5 3.64 6.5 8.38V21h-6v-5.71c0-1.36-.03-3.11-1.9-3.11-1.91 0-2.2 1.5-2.2 3v5.82h-6V9z"/>
        </svg>
        LinkedIn
      </a>

      <!-- LeetCode -->
      <a href={leetCodeUrl} target="_blank" rel="noopener noreferrer"
        class="flex items-center gap-2 bg-yellow-600 hover:bg-yellow-700 text-white px-4 py-2 rounded-lg text-sm transition">
        <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5" viewBox="0 0 50 50" fill="currentColor">
          <path d="M33.6 14.8l-9-9c-1.5-1.5-4-1.5-5.5 0l-14.9 15c-1.5 1.5-1.5 4 0 5.5l14.9 14.9c1.5 1.5 4 1.5 5.5 0l9-9c1.5-1.5 1.5-4 0-5.5l-3-3 3-3c1.6-1.5 1.6-4 0-5.5zm-2.1 13.1l-9 9-14.8-14.8 14.9-14.9 9 9-5.3 5.3c-1.5 1.5-1.5 4 0 5.5l5.2 5.2z"/>
        </svg>
        LeetCode
      </a>
    </div>
  </div>

  <!-- Texto adicional para rellenar espacio (opcional) -->
  <div class="mt-8 text-gray-400 text-center max-w-md">
    <p class="mb-4">Feel free to reach out for collaborations or just to say hello!</p>
    <p>I'm particularly interested in fintech projects and open-source contributions.</p>
  </div>
</section>